<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project1.virtualinteriordesign">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- //geeks for geeks -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vid_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualInteriorDesign">

        <activity android:name=".SplashScreen">
        </activity>

        <activity android:name=".SignupActivity">
        </activity>
        <activity android:name=".Profile">
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>