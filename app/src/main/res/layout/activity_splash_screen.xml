<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/appNameLogo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:src="@drawable/vid_logo"
        android:elevation="10dp" />
    <LinearLayout
        android:id="@+id/logoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/dosis"
            android:text="Virtual Interior Design"
            android:textColor="#103459"
            android:textSize="40dp" />
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="15dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#63a7db"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis"
        android:textColor="#4DAFFF"
        android:text="Design Your Own World"
        android:textSize="18dp"
        android:letterSpacing="0.4"
        android:layout_margin="4dp"
        android:id="@+id/description"/>
</LinearLayout>